{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "spec": {
      "specVersion": 3,
      "outputDirectory": "public/swagger",
      "description": "sachin bolierplate apis",
       "basePath":"/api/v1",
      "version": "1.0.0",
      "license": "license",
      "specMerging": "recursive",
      "securityDefinitions": {
        "Bearer": {
          "type": "apiKey",
          "name": "Authorization",
          "in": "header",
          "description": "JWT Authorization header using the Bearer scheme."
        }
      }
      
    },
    "routes": {
      "routesDir": "build"
    },
    "controllerPathGlobs": ["./src/controllers/**/*.ts"]
  }
  
  