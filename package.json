{
  "name": "sachinbolierplate",
  "version": "1.0.0",
  "description": "sachin sangwan ts boiler plate",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "build": "npm run install-types && tsc && npm run swagger",
    "dev": "npm run swagger && nodemon",
    "swagger": "npx tsoa spec",
    "prebuild": "if [ -d \"src/template\" ]; then mkdir -p build/template && cp -a src/template build/; else echo \"No template directory found\"; fi",
    "render-build": "npm install && npm run build",
    "install-types": "npm install @types/node @types/express @types/bcryptjs @types/jsonwebtoken @types/multer @types/nodemailer",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": "18.x"
  },
  "author": "sachin sangwan",
  "license": "ISC",
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.19",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-ui-express": "^4.1.7",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsoa": "^6.6.0",
    "typescript": "^5.6.3"
  }
}
