{
  "name": "sachinbolierplate",
  "version": "1.0.0",
  "description": "sachin sangwan ts boiler plate",
  "main": "server.ts",
  "scripts": {
    "start": "npm run build && pm2 start build/server.js --name 'uniteForKids_apis' -dev",
    "restart": "npm run build && pm2 restart uniteForKids_apis",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "dev": "npm run swagger && nodemon",
    "swagger": "npx tsoa spec",
    "prestart": "mkdir -p build/template && cp -a src/template build/"
  },
  "author": "sachin sangwan",
  "license": "ISC",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-ui-express": "^4.1.7",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsoa": "^6.6.0",
    "typescript": "^5.6.3"
  }
}
